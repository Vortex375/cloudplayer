<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:my='urn:import:de.pandaserv.music.client.widgets'>
    <g:HTMLPanel>
        <b:Container>
            <b:Column  offset="1" size="10">
                <b:Row addStyleNames="styled-row">
                    <b:Heading  size="1">PandaServ Music Test App</b:Heading>
                </b:Row>

                <b:Row addStyleNames="strut">
                    <!-- spacing -->
                </b:Row>

                <b:Row addStyleNames="styled-row">
                    <b:NavList ui:field="sampleTracksList">
                        <b:NavHeader>Sample Tracks</b:NavHeader>
                        <b:NavLink>Track 1</b:NavLink>
                        <b:NavLink>Track 2</b:NavLink>
                    </b:NavList>
                </b:Row>

                <b:Row addStyleNames="strut">
                    <!-- spacing -->
                </b:Row>

                <b:Row addStyleNames="styled-row">
                    <g:HTMLPanel addStyleNames="nowPlayingWell">
                        <g:Label ui:field="titleLabel" addStyleNames="titleLabel">Track Title</g:Label>
                        <g:Label ui:field="artistLabel" addStyleNames="artistLabel">Artist Name</g:Label>
                        <g:Label ui:field="albumLabel" addStyleNames="albumLabel">Album</g:Label>
                    </g:HTMLPanel>
                    <g:HTMLPanel addStyleNames="centerText">
                        <b:ButtonGroup addStyleNames="pull-left">
                            <b:Button ui:field="prevButton" icon="BACKWARD" addStyleNames="playbackButton"/>
                            <b:Button ui:field="playButton" icon="PLAY" addStyleNames="playbackButton"/>
                            <b:Button ui:field="nextButton" icon="FORWARD" addStyleNames="playbackButton"/>
                        </b:ButtonGroup>
                        <g:Label ui:field="errorLabel" addStyleNames="errorLabel" visible="false"/>
                        <g:Label addStyleNames="pull-right" ui:field="timeLabel">0:00 / 0:00</g:Label>
                    </g:HTMLPanel>
                </b:Row>
                <b:Row addStyleNames="styled-row">
                    <g:Label ui:field="debugLabel"/>
                </b:Row>
            </b:Column>
        </b:Container>
    </g:HTMLPanel>
</ui:UiBinder>